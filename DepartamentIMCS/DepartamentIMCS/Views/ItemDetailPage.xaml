<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DepartamentIMCS.Views.ItemDetailPage"
             Title="{Binding Title}">


    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Направление:" FontSize="Medium" />
            <Label Text="{Binding Text}" FontSize="Small"/>
            <Label Text="Уровень подготовки" FontSize="Medium" />
            <Label Text="{Binding Category, Mode=TwoWay}" FontSize="Medium" />
            <Label Text="Описание:" FontSize="Medium" />
            <Label Text="{Binding Description}" FontSize="Small"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>